
<div class="container mt-5">
  <h1>Lists</h1>
  <div class="row d-flex">
    <div class="col-4">
      <% @lists.each do |list| %>
        <%= link_to (list) do %>
          <div class="card-category d-flex mt-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1267&q=80)">
            <%= list.name %>
          </div>
        <% end %>
      <% end %>
      <%= link_to 'Add a list', new_list_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
</div>
