<div class="container mt-5 mb-5">
  <h1>My Lists</h1>
  <div class="row d-flex justify-content-between">
    <% @lists.each do |list| %>
      <div class="col-4">
        <%= link_to (list) do %>
          <div class="card-category mt-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1267&q=80)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>


      <%= link_to 'Create a movie list', new_list_path, class: "btn btn-primary mt-3" %>
</div>
